# GitHub Configuration
# GitHub Personal Access Token を設定してください
# https://github.com/settings/tokens から取得できます
# 必要な権限: repo (プライベートリポジトリの場合), public_repo (パブリックリポジトリの場合)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo-name
GITHUB_BASE_URL=https://api.github.com

# Site Configuration
SITE_TITLE=Beaver Astro Edition
SITE_DESCRIPTION=AI-first knowledge management system
SITE_BASE_URL=https://nyasuto.github.io/beaver

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=

# Code Quality Configuration (Optional)
# Codecov integration for quality analysis dashboard

# Codecov API Token (Required for quality dashboard)
# For reading coverage data in quality dashboard
# Generate at: https://codecov.io → Settings → Access → Personal Access Token
# Required permissions: Read access to repositories
CODECOV_API_TOKEN=your_codecov_api_token_here

# Note: CODECOV_TOKEN is handled separately in CI/CD for coverage uploads
# It should be configured as a secret in your CI/CD environment, not here

# Repository Configuration
CODECOV_OWNER=your-github-username
CODECOV_REPO=your-repository-name

# AI Classification Configuration
AI_CLASSIFICATION_ENABLED=true
AI_CLASSIFICATION_RULES_PATH=config/classification-rules.yaml
AI_CATEGORY_MAPPING_PATH=config/category-mapping.json

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info
DEBUG=false

# Build Configuration
BUILD_ANALYZE=false
BUILD_SOURCEMAP=true

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Security Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15