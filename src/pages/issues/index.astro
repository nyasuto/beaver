---
/**
 * Issues List Page
 *
 * This page displays a list of GitHub issues with filtering and search capabilities.
 */

import PageLayout from '../../components/layouts/PageLayout.astro';

const title = 'Issues';
const description = 'Browse and analyze GitHub issues with AI-powered insights';

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Issues', href: '/issues' },
];
---

<PageLayout
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
  showHeader={true}
  showFooter={true}
  showSearch={true}
  maxWidth="7xl"
  padding="lg"
>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-heading mb-2">ðŸ“‹ Issues</h1>
    <p class="text-muted">
      Browse and analyze GitHub issues with AI-powered classification and insights
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Filters Sidebar -->
    <aside class="lg:col-span-1">
      <div class="card">
        <h2 class="text-lg font-semibold text-heading mb-4">Filters</h2>
        <div class="space-y-4">
          <div>
            <label class="label">Status</label>
            <select class="input">
              <option value="all">All</option>
              <option value="open">Open</option>
              <option value="closed">Closed</option>
            </select>
          </div>

          <div>
            <label class="label">Labels</label>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" class="mr-2" />
                <span class="text-sm">Bug</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="mr-2" />
                <span class="text-sm">Feature</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="mr-2" />
                <span class="text-sm">Enhancement</span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Issues List -->
    <div class="lg:col-span-3">
      <div class="card">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
          <h2 class="text-lg font-semibold text-heading">Issues List</h2>
          <div class="flex gap-2 mt-2 sm:mt-0">
            <input type="search" placeholder="Search issues..." class="input w-64" />
            <button class="btn btn-primary">Search</button>
          </div>
        </div>

        <div class="space-y-4">
          <!-- Placeholder for issues -->
          <div class="p-4 border rounded-md">
            <h3 class="font-medium text-heading">Sample Issue #1</h3>
            <p class="text-sm text-muted mt-1">
              This is a placeholder for issue content. Issues will be loaded from GitHub API.
            </p>
            <div class="flex gap-2 mt-2">
              <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded">bug</span>
              <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">high priority</span>
            </div>
          </div>

          <div class="p-4 border rounded-md">
            <h3 class="font-medium text-heading">Sample Issue #2</h3>
            <p class="text-sm text-muted mt-1">
              Another placeholder issue. The GitHub API integration will populate real data here.
            </p>
            <div class="flex gap-2 mt-2">
              <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">feature</span>
            </div>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-muted text-sm">
            Status: Issues will be loaded when GitHub API integration is implemented
          </p>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
