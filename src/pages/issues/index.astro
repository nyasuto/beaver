const title = 'Issue';
const description = 'AIæ­è¼‰ã®æ´å¯Ÿã§GitHubã®Issueã‚’é–²è¦§ãƒ»åˆ†æ';

// é™çš„ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ï¼ˆPRã‚’é™¤å¤–ã—ãŸissueã®ã¿ï¼‰
const allIssues = getIssuesOnlyWithFallback();
