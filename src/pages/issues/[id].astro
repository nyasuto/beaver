  issueClassification = {
    issueId: currentIssue.number,
    issueNumber: currentIssue.number,
    primaryCategory: 'enhancement',
    primaryConfidence: 0.85,
    estimatedPriority: 'medium',
    priorityConfidence: 0.72,
    score: 75,
    scoreBreakdown: {
      category: 25,
      priority: 20,
      confidence: 15,
      recency: 15,
    },
    classifications: [
      {
