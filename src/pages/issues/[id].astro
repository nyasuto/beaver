---
/**
 * Issue Detail Page
 *
 * This page displays detailed information about a specific GitHub issue.
 */

import PageLayout from '../../components/layouts/PageLayout.astro';

export function getStaticPaths() {
  // For now, return empty paths - will be populated when GitHub API is integrated
  return [];
}

const { id } = Astro.params;
const title = `Issue #${id}`;
const description = `Detailed view of GitHub issue #${id} with AI-powered analysis`;

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Issues', href: '/issues' },
  { name: `Issue #${id}`, href: `/issues/${id}` },
];
---

<PageLayout
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
  showHeader={true}
  showFooter={true}
  showSearch={true}
  maxWidth="7xl"
  padding="lg"
>
  <!-- Issue Header -->
  <div class="card mb-6">
    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-2xl font-bold text-heading mb-2">
          Issue #{id}: Sample Issue Title
        </h1>
        <div class="flex items-center gap-4 text-sm text-muted">
          <span>Opened 2 days ago by @username</span>
          <span class="inline-block w-2 h-2 bg-green-500 rounded-full"></span>
          <span>Open</span>
        </div>
      </div>
      <div class="flex gap-2">
        <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded">bug</span>
        <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">high priority</span>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Issue Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Description -->
      <div class="card">
        <h2 class="text-lg font-semibold text-heading mb-4">Description</h2>
        <div class="prose dark:prose-invert max-w-none">
          <p>
            This is a placeholder for the issue description. When the GitHub API integration is
            implemented, this will display the actual issue content with proper markdown rendering.
          </p>
          <h3>Steps to Reproduce</h3>
          <ol>
            <li>Step one</li>
            <li>Step two</li>
            <li>Observe the issue</li>
          </ol>
          <h3>Expected Behavior</h3>
          <p>Description of expected behavior...</p>
          <h3>Actual Behavior</h3>
          <p>Description of actual behavior...</p>
        </div>
      </div>

      <!-- Comments -->
      <div class="card">
        <h2 class="text-lg font-semibold text-heading mb-4">Comments</h2>
        <div class="space-y-4">
          <div class="border rounded-md p-4">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-medium text-heading">@username</span>
              <span class="text-sm text-muted">2 hours ago</span>
            </div>
            <p class="text-sm">
              This is a placeholder comment. Comments will be loaded from the GitHub API.
            </p>
          </div>

          <div class="border rounded-md p-4">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-medium text-heading">@contributor</span>
              <span class="text-sm text-muted">1 hour ago</span>
            </div>
            <p class="text-sm">
              Another placeholder comment showing the structure for discussion threads.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- AI Analysis -->
      <div class="card">
        <h3 class="text-lg font-semibold text-heading mb-4">ðŸ¤– AI Analysis</h3>
        <div class="space-y-3">
          <div>
            <span class="text-sm font-medium text-heading">Classification:</span>
            <p class="text-sm text-muted">Bug - High Priority</p>
          </div>
          <div>
            <span class="text-sm font-medium text-heading">Sentiment:</span>
            <p class="text-sm text-muted">Neutral</p>
          </div>
          <div>
            <span class="text-sm font-medium text-heading">Estimated Effort:</span>
            <p class="text-sm text-muted">Medium (3-5 days)</p>
          </div>
        </div>
      </div>

      <!-- Issue Metadata -->
      <div class="card">
        <h3 class="text-lg font-semibold text-heading mb-4">Details</h3>
        <div class="space-y-3">
          <div>
            <span class="text-sm font-medium text-heading">Assignees:</span>
            <p class="text-sm text-muted">None</p>
          </div>
          <div>
            <span class="text-sm font-medium text-heading">Milestone:</span>
            <p class="text-sm text-muted">v1.0.0</p>
          </div>
          <div>
            <span class="text-sm font-medium text-heading">Project:</span>
            <p class="text-sm text-muted">Main Project</p>
          </div>
        </div>
      </div>

      <!-- Related Issues -->
      <div class="card">
        <h3 class="text-lg font-semibold text-heading mb-4">Related Issues</h3>
        <div class="space-y-2">
          <a href="/issues/123" class="block text-sm text-primary-600 hover:text-primary-700">
            #123 Similar issue
          </a>
          <a href="/issues/456" class="block text-sm text-primary-600 hover:text-primary-700">
            #456 Related feature request
          </a>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
