---
/**
 * Analytics Dashboard Page
 *
 * This page displays analytics and insights about GitHub repository activity.
 */

import DashboardLayout from '../../components/layouts/DashboardLayout.astro';
import {
  IssueTrendsChart,
  IssueCategoriesChart,
  ResolutionTimeChart,
  ContributorActivityChart,
} from '../../components/charts/AnalyticsCharts.tsx';

const title = 'Analytics Dashboard';
const description = 'View analytics and insights about your GitHub repository activity';

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Analytics', href: '/analytics' },
];
---

<DashboardLayout
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
  showSearch={true}
  contentPadding="lg"
>
  <div class="space-y-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-heading mb-2">üìä Analytics Dashboard</h1>
      <p class="text-muted">Insights and analytics about your GitHub repository activity</p>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-muted">Total Issues</p>
            <p class="text-2xl font-bold text-heading">42</p>
          </div>
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <span class="text-blue-600 text-xl">üìã</span>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-muted">Open Issues</p>
            <p class="text-2xl font-bold text-heading">18</p>
          </div>
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <span class="text-green-600 text-xl">üîì</span>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-muted">Closed Issues</p>
            <p class="text-2xl font-bold text-heading">24</p>
          </div>
          <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
            <span class="text-gray-600 text-xl">üîí</span>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-muted">Avg. Resolution Time</p>
            <p class="text-2xl font-bold text-heading">3.2d</p>
          </div>
          <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
            <span class="text-purple-600 text-xl">‚è±Ô∏è</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Interactive Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Issue Trend Chart -->
      <div class="h-80">
        <IssueTrendsChart client:load height={300} />
      </div>

      <!-- Issue Categories -->
      <div class="h-80">
        <IssueCategoriesChart client:load height={300} />
      </div>
    </div>

    <!-- Performance Metrics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <div class="h-80">
        <ResolutionTimeChart client:load height={300} />
      </div>

      <div class="h-80">
        <ContributorActivityChart client:load height={300} />
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Activity -->
      <div class="lg:col-span-2">
        <div class="card">
          <h2 class="text-lg font-semibold text-heading mb-4">Recent Activity</h2>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div
                class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <span class="text-green-600 text-sm">‚úì</span>
              </div>
              <div>
                <p class="text-sm text-heading">Issue #123 was closed</p>
                <p class="text-xs text-muted">2 hours ago</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div
                class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <span class="text-blue-600 text-sm">+</span>
              </div>
              <div>
                <p class="text-sm text-heading">New issue #124 was opened</p>
                <p class="text-xs text-muted">4 hours ago</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div
                class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <span class="text-yellow-600 text-sm">üí¨</span>
              </div>
              <div>
                <p class="text-sm text-heading">Comment added to issue #122</p>
                <p class="text-xs text-muted">6 hours ago</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Top Contributors -->
      <div class="lg:col-span-1">
        <div class="card">
          <h2 class="text-lg font-semibold text-heading mb-4">Top Contributors</h2>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm text-heading">@alice</span>
              <span class="text-sm text-muted">8 issues</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-heading">@bob</span>
              <span class="text-sm text-muted">6 issues</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-heading">@charlie</span>
              <span class="text-sm text-muted">4 issues</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Insights -->
    <div class="mt-8">
      <div class="card">
        <h2 class="text-lg font-semibold text-heading mb-4">ü§ñ AI Insights</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-medium text-heading mb-2">Key Findings</h3>
            <ul class="space-y-2 text-sm text-muted">
              <li>‚Ä¢ Bug reports increased by 15% this week</li>
              <li>‚Ä¢ Feature requests are trending upward</li>
              <li>‚Ä¢ Average resolution time improved by 1.2 days</li>
            </ul>
          </div>
          <div>
            <h3 class="font-medium text-heading mb-2">Recommendations</h3>
            <ul class="space-y-2 text-sm text-muted">
              <li>‚Ä¢ Focus on addressing high-priority bugs</li>
              <li>‚Ä¢ Consider adding more documentation</li>
              <li>‚Ä¢ Review feature request backlog</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
