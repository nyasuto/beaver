{
  "name": "beaver-astro",
  "version": "0.1.0",
  "description": "AI-first knowledge management system that transforms GitHub development activities into structured, persistent knowledge bases",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "npm run fetch-data",
    "build": "astro build",
    "build:full": "npm run fetch-data && npm run build",
    "preview": "astro preview",
    "astro": "astro",
    "fetch-data": "tsx scripts/fetch-github-data.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.astro src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.astro src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,astro,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,astro,json,md}\"",
    "type-check": "astro check --minimumSeverity error && tsc --noEmit --skipLibCheck",
    "type-check:charts": "tsc --project tsconfig.charts.json --noEmit",
    "type-check:all": "npm run type-check && npm run type-check:charts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
    "quality-fix": "npm run lint:fix && npm run format && npm run type-check",
    "validate": "npm run quality",
    "analyze": "astro build --analyze",
    "deploy": "astro build && gh-pages -d dist"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/react": "^4.3.0",
    "@astrojs/tailwind": "^6.0.2",
    "@octokit/auth-app": "^8.0.1",
    "@octokit/rest": "^22.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "astro": "^5.11.0",
    "chart.js": "^4.4.4",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-rehype": "^11.1.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.1.1",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.20.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "astro",
    "typescript",
    "github",
    "knowledge-management",
    "ai-agents",
    "analytics",
    "issues",
    "data-visualization"
  ],
  "author": {
    "name": "Beaver Team",
    "email": "team@beaver.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nyasuto/beaver.git"
  },
  "bugs": {
    "url": "https://github.com/nyasuto/beaver/issues"
  },
  "homepage": "https://github.com/nyasuto/beaver#readme"
}
